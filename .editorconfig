# This file is for unifying the coding style for different editors and IDEs.

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.hbs]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false